{
  "testPathIgnorePatterns": ["/dist/", "/lib/", "/node_modules/", "\\.pnp\\.[^\\/]+$"],
  "transform": {
    "\\.[jt]sx?$": [
      "babel-jest",
      {
        "presets": [
          ["@babel/preset-typescript", { "allowDeclareFields": true }],
          ["@babel/preset-env", { "modules": "commonjs", "targets": { "node": "18" } }]
        ],
        "sourceMaps": true
      }
    ]
  }
}
